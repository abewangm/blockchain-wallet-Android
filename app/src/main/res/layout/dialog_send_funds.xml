<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetLeft="72dp"
            app:contentInsetStart="72dp"
            app:navigationIcon="@drawable/ic_clear_white_24dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

        <!-- LOADING LAYOUT -->
        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <!-- MAIN LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    fontPath="fonts/Montserrat-Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp"
                    android:text="@string/from"
                    android:textColor="@color/primary_gray_dark"
                    android:textSize="14sp" />

                <include
                    android:id="@+id/spinner_from"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    layout="@layout/include_spinner_compat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-16dp" />

            </LinearLayout>

            <include layout="@layout/divider_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    fontPath="fonts/Montserrat-Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp"
                    android:text="@string/to"
                    android:textColor="@color/primary_gray_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_to"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Jaume" />

            </LinearLayout>

            <include layout="@layout/divider_grey" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="16dp"
                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- To transfer -->
                <TextView
                    fontPath="fonts/Montserrat-Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/transfer_amount"
                    android:textColor="@color/primary_gray_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_transfer_amount_btc"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="0.0011242 BTC" />

                <TextView
                    android:id="@+id/label_transfer_amount_fiat"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="$6.22" />

                <!-- Fees -->
                <TextView
                    fontPath="fonts/Montserrat-Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="16dp"
                    android:text="@string/fee"
                    android:textColor="@color/primary_gray_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_fee_amount_btc"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="0.0003685 BTC" />

                <TextView
                    android:id="@+id/label_fee_amount_fiat"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="$0.23" />

            </GridLayout>

            <include layout="@layout/divider_grey" />

            <Button
                android:id="@+id/button_send"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:text="@string/SEND"
                android:textSize="14sp"
                android:theme="@style/ButtonBlueTheme" />

        </LinearLayout>
    </LinearLayout>
</layout>