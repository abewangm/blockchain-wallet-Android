<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:foreground="?attr/selectableItemBackground"
        android:theme="@style/PlainTheme"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fontFamily="@font/montserrat"
                android:singleLine="true"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                tools:text="Adam Bennett" />

            <TextView
                android:id="@+id/contactStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:minWidth="48dp"
                android:paddingLeft="16dp"
                tools:text="(Pending)" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageviewIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/rounded_view_accent_blue"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageViewMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:tint="@color/primary_gray_light"
            android:visibility="visible"
            app:srcCompat="@drawable/vector_more" />

    </android.support.v7.widget.CardView>
</FrameLayout>